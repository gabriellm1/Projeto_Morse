<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:rowCount="6"
    android:columnCount="3"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_send1"
        android:layout_width="190dp"
        android:layout_height="109dp"
        android:layout_above="@+id/button_test"
        android:layout_alignParentEnd="true"
        android:layout_column="0"
        android:layout_marginBottom="-6dp"
        android:layout_row="4"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="MANDAR PARA RAFAEL" />

    <Button
        android:id="@+id/button_send0"
        android:layout_width="wrap_content"
        android:layout_height="109dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/button_send1"
        android:layout_column="0"
        android:layout_row="4"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="MANDAR PARA CUIDADOR" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="76dp"
        android:layout_above="@+id/button_send1"
        android:layout_alignParentStart="true"
        android:layout_column="0"
        android:layout_row="1" />

    <Button
        android:id="@+id/button_test"
        android:layout_width="match_parent"
        android:layout_height="87dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_column="0"
        android:layout_marginBottom="14dp"
        android:layout_row="6"
        android:backgroundTint="@android:color/holo_red_light"
        android:elevation="17dp"
        android:text="MORSE" />

</RelativeLayout>
