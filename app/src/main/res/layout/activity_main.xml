<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:rowCount="6"
    android:columnCount="3"
    tools:context=".MainActivity"
    android:weightSum="2">

    <Button
        android:id="@+id/button_sendRafa"
        android:layout_width="116dp"
        android:layout_height="76dp"
        android:layout_alignEnd="@+id/button_morse"
        android:layout_alignParentBottom="true"
        android:layout_column="0"
        android:layout_marginBottom="35dp"
        android:layout_row="3"
        android:layout_weight="2"
        android:backgroundTint="@android:color/holo_blue_light"
        android:text="PARA RAFAEL" />

    <Button
        android:id="@+id/button_sendCuida"
        android:layout_width="116dp"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/button_space"
        android:layout_column="3"
        android:layout_row="3"
        android:layout_weight="1"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="PARA CUIDADOR" />

    <Button
        android:id="@+id/button_sendContact"
        android:layout_width="116dp"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_column="2"
        android:layout_row="3"
        android:layout_weight="1"
        android:backgroundTint="@android:color/holo_orange_light"
        android:text="Para número" />


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="308dp"
        android:layout_height="38dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_column="0"
        android:layout_marginTop="166dp"
        android:layout_row="1" />

    <Spinner
        android:id="@+id/dictionary1"
        android:layout_width="190dp"
        android:layout_height="76dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_column="0"
        android:layout_row="1" />

    <Button
        android:id="@+id/button_morse"
        android:layout_width="136dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_column="0"
        android:layout_row="6"
        android:backgroundTint="@android:color/darker_gray"
        android:elevation="17dp"
        android:text="MORSE" />

    <Button
        android:id="@+id/button_space"
        android:layout_width="wrap_content"
        android:layout_height="76dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_column="0"
        android:layout_row="6"
        android:backgroundTint="@android:color/holo_red_light"
        android:elevation="17dp"
        android:text="ESPAÇO/APAGAR" />

    <TextView
        android:id="@+id/messageText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/dictionary1"
        android:padding="5sp"
        android:text=""
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/dictionary2"
        android:layout_width="191dp"
        android:layout_height="76dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_column="0"
        android:layout_row="1" />


</RelativeLayout>
