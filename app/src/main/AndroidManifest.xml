<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="br.pro.hashi.ensino.desagil.morse">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Morsi"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="br.pro.hashi.ensino.desagil.morse.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Essa tag é criada manualmente, quando você usa File -> New -> Activity. -->
        <activity
            android:name="br.pro.hashi.ensino.desagil.morse.CuidadorActivity"
            android:parentActivityName="br.pro.hashi.ensino.desagil.morse.MainActivity">
        </activity>
        <activity
            android:name="br.pro.hashi.ensino.desagil.morse.RafaelActivity"
            android:parentActivityName="br.pro.hashi.ensino.desagil.morse.MainActivity">
        </activity>

    </application>

    <!-- Se esquecer esta tag, o aplicativo explode ao tentar pedir permissão. -->
    <uses-permission android:name="android.permission.SEND_SMS" />

</manifest>